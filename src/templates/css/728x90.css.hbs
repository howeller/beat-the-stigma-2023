
/* Positioning */

#banner div, .abs, img {
	position: absolute;
	display: block;
}

span{
	display: block;
}

#banner div, #banner ol{
	position: absolute;
}

div#f1-container{
	display: flex;
	align-items: center;
	justify-content: center;
}

svg#bts-logo{
	width: 209px;
	height: auto;
	overflow: visible;
}
svg#ohio-logo{
	width: 57px;
	height: auto;
	right: 80px;
	top: 14px;
}

/* Endframe */

div#end-container{
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}

div#end-container p, div#end-container button, div#end-container svg{
	display: inline-block;
	margin: {{end.margin}}px; /* Space between elements on the end frame */
}
#end-txt{
	color: var(--teal);
	font-weight: 700;
	font-size: 26px;
	line-height: 90%;
}

/* CTA Btn */

#cta {
	border: 1px white solid;
	border-radius: 5px;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	padding: 3px 14px;
}

#cta-txt {
	color: white;
	display: block;
	font-weight: 400;
	font-size: 16px;
	line-height: 22px;
	letter-spacing: -0.5px;
	white-space: nowrap;
	width: auto;
}

/* Replay Btn */

.replay {
	top: 0;
	left: 0;
}
#replay-container {
	width: 30px;
	height: 30px;
	cursor: pointer;
	visibility: hidden;
}
svg#replaySvg{
	display: inline-block;
	position: absolute;
	width: 14px;
	height: 14px;
	left: 5px;
	top: 5px;
}
