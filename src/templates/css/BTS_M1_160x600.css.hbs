#banner * {
	color: white;
	font-weight: 700;
	line-height: 1;
	text-align: center;
}

svg#bts-logo{
	width: 114px;
	height: auto;
	overflow: visible;
	top: 53%;
	left: 50%;
	transform: translate(-50%, -100%);/* Logo isn't 100% centered vertically */
}

/* Frame2 */

div.letter-line-container {
	display: flex;
	justify-content: center;
	width: 100%;
}
#f2-letter-line1 {
	margin-top: 231px;
}
#f2-letter-line2 {
	margin-top: 5px;
}

/* F2 Individual letters */
div.letter-box {
	background-color: var(--teal);
	border-radius: 2px;
	display: inline-flex;
	justify-content: center;
	align-items: center;
	text-align: center;
	width: 15px;
	height: 20px;
	margin: 0 2.5px;
	font-size: 17px;
	{{#if (showFpo)}}background-color: rgba(255, 0, 0, 0.4);{{/if}}
}

p#f2-txt {
	font-size: 13px;
	line-height: 1.1;
	margin-top: 24px;
	{{#if (showFpo)}}color: red;{{/if}}
}

svg#outline {
	top: 193px;
	left: 7px;
	width: 147px;
}

/* Endframe */

#end-container * {
	position: relative !important;
	display: block;
}

#end-txt{
	font-size: 19px;
	line-height: 1.1;
	margin-top: 230px;
	{{#if (showFpo)}}color: red;{{/if}}
}

/* CTA Btn */

#cta {
	background-color: var(--teal);
	border-radius: 5px;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 18px auto 0;
	padding: 6px 10px;
	font-size: 15px;
	/* letter-spacing: -0.5px;	 */
	{{#if (showFpo)}}background-color: rgba(255, 0, 0, 0.4); color:red{{/if}}
}

#cta-txt {
	white-space: nowrap;
	width: auto;
}

svg#ohio-logo{
	width: 34px;
	margin: 134px auto;
}
