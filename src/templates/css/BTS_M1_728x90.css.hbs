}

svg#outline {
	top: 18px;
	left: 42px;
	width: 645px;
}

/* Endframe */
#end-container {
	position: absolute;
	display: flex;
	justify-content: center;
	flex-direction: row;
	align-items: center;
	/* text-align: center; */
}
#end-container * {
	position: relative !important;
	display: inline-block;
}

#end-txt{
	font-size: 19px;
	letter-spacing: -0.2px;
	margin-left: 17px;
	{{~#if (showFpo)}}color: red;{{/if~}}
}

/* CTA Btn */

#cta {
	background-color: var(--teal);
	border-radius: 3px;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 31px;
	margin-right: 38px;
	padding: 6px 8px;
	font-size: 13px;
	letter-spacing: -0.5px;	
	{{~#if (showFpo)}}background-color: rgba(255, 0, 0, 0.4); color:red{{/if~}}
}

#cta-txt {
	white-space: nowrap;
	width: auto;
}

