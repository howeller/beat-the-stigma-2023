/* Frame2 */

div.letter-line-container {
	display: flex;
	justify-content: center;
	width: 100%;
}

#f2-letter-line1 {
	margin-top: 35px;
	display: inline-block;
}

/* F2 Individual letters */
div.letter-box {
	background-color: var(--teal);
	border-radius: 2px;
	display: inline-flex;
	justify-content: center;
	align-items: center;
	text-align: center;
	width: 14px;
	height: 20px;
	margin: 0 2px;
	font-size: 17px;
	{{~#if (showFpo)}}background-color: rgba(255, 0, 0, 0.4); color:black !important;{{/if~}}
}

