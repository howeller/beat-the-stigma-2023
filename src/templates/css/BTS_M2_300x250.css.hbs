#banner * {
	font-weight: 700;
	text-align: center;
}

/* Frame1 */

#bts-logo {
	width: 153px;
	margin: 102px auto 0;
	position: relative;
}
.bg-blend {
  /* background-image: url(images/bg2_2x.jpg); */
  background-color: rgba(255, 7, 7, 0.5);
  background-blend-mode: color;
}

.game-wrapper, svg#header-back  {
	margin: 42px 24px;
	width: 251px;
}
.game-wrapper{
}

svg#header-back {
	height: auto;
	overflow: visible;
	 {{~#if (showFpo)}}/*opacity:0.1;*/{{/if~}} 
}
.game-txt {
	font-size: 11px;
	line-height: 1.1 ;
	{{~#if (showFpo)}}color: green !important;{{/if~}}
}
p.header-txt {
	margin-top: 24px;
}

ol {
	display: block;
	position: absolute;
	overflow: hidden;
	width: 100%;
	margin-top: 17px;
}

li {
	width: 100%;
	height: 30px;
	border-radius: 3px;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	display: flex;
	align-items: center;
	margin-bottom: 5px;
	padding-left: 7px;
}

#game1-wrapper li {
	border: solid 2px #fe3131;
}
#game2-wrapper li {
	border: solid 2px #84bfe6;
}

#g1-answers li {
	background-color: rgba(79, 19, 47, 0.7);
}
#g2-answers li {
	background-color: {{group.blueFill}};
}
#g1-wrong-answers li span.strikethrough {
	position: relative;
	display: inline-block;
}

#g1-wrong-answers li span.strikethrough::after {
	position: absolute;
	border-top: 1px solid white;
	background-color: white;
	content: ' ';
	left: 0;
	top: 50%;
	width: calc(100% + 3px);
	margin: 0px -2px;
}

/* Endframe */

#end-container * {
	position: relative !important;
	display: block;
}

#end-txt{
	font-size: 17px;
	line-height: 18px;
	margin-top: 96px;
	{{~#if (showFpo)}}color: red;{{/if}}
}

#cta {
	background-color: var(--teal);
	border-radius: 5px;
	color: white;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 17px auto 0;
	padding: 3px 7px;
	font-size: 15px;
	letter-spacing: -0.5px;
	{{~#if (showFpo)}}visibility: visible;background-color: rgba(255, 0, 0, 0.4); color:red{{/if}}
}

#cta-txt {
	white-space: nowrap;
	width: auto;
}

svg#ohio-logo{
	width: 28px;
	margin: 20px auto;
}