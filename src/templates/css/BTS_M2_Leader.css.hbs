/* Frame2 Quiz */

div#f2-container h1{
	color: var(--teal);
	font-size: 26px;
	line-height: 90%;
	text-align: center;
	margin: 15px 0;
	width: 100%;
}

ol.f2-txt{
	color: white;
	font-weight: 600;
	font-size: 16px;
	line-height: 18px;
	list-style-type: upper-alpha;
	list-style-position: inside;
	display: flex;
	flex-direction: row;
	flex-wrap: no-wrap;
	justify-content: center;
	width: 728px;
}

/* F2 Individual lines */

ol.f2-txt li {
	display: list-item;
	text-align: left;
	padding: 1px 8px 3px;
	margin: 0px {{frame2.listMargin}}px;
}

/* The highlighted line */

li#answer{
	background: linear-gradient(to right, var(--teal) 49.9%, rgba(0, 0, 0, 0.0) 49.9%);
	background-size: 200% 100%;
	background-position: right bottom;
	overflow: hidden;
	border-radius: 3px;
	width: -moz-fit-content;
	width: fit-content;
}

span.strikethrough {
	position: relative;
	display: inline-block;
}

span.strikethrough::after {
	position: absolute;
	background-color: var(--teal);
	content: ' ';
	border-radius: 1px;
	height: 3px;
	left: 0;
	top: 50%;
	width: calc(100% + 33px);
	margin: 0px -25px;
}
