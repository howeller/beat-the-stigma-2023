/* Positioning */

#banner div, .abs, img, svg, ol {
	position: absolute;
	display: block;
}

span{
	display: block;
}

svg#bts-logo{
	width: 144px;
	height: auto;
	overflow: visible;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -100%);/* Logo isn't 100% centered vertically */
}
svg#ohio-logo{
	width: 67px;
	height: auto;
	bottom: 50px;
	left: 50%;
	transform: translateX(-50%);
}

/* CTA Btn */

#cta {
	border: 1px white solid;
	border-radius: 5px;
	display: flex;
	align-items: center;
	justify-content: center;
	position: absolute;
	padding: 3px 14px;
	left: 16px;
	/*bottom: 44px;*/
}

#cta-txt {
	color: white;
	display: block;
	font-weight: 400;
	font-size: 16px;
	line-height: 22px;
	letter-spacing: -0.5px;
	white-space: nowrap;
	width: auto;
}

/* Replay Btn */

.replay {
	top: 0;
	left: 0;
}
#replay-container {
	width: 30px;
	height: 30px;
	cursor: pointer;
	visibility: hidden;
}
svg#replaySvg{
	display: inline-block;
	position: absolute;
	width: 14px;
	height: 14px;
	left: 5px;
	top: 5px;
}
