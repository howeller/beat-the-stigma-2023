/* Positioning */

.abs, img, svg {
	position: absolute;
	display: block;
}

svg#bts-logo{
	width: 114px;
	height: auto;
	overflow: visible;
	top: 53%;
	left: 50%;
	transform: translate(-50%, -100%);/* Logo isn't 100% centered vertically */
}

/* Replay Btn */

.replay {
	top: 0;
	left: 0;
}
#replay-container {
	width: 30px;
	height: 30px;
	cursor: pointer;
	visibility: hidden;
}
svg#replaySvg{
	display: inline-block;
	position: absolute;
	width: 14px;
	height: 14px;
	left: 5px;
	top: 5px;
}
