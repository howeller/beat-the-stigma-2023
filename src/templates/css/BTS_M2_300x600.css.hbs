#banner * {
	font-weight: 700;
	text-align: center;
}

/* Frame1 */

#bts-logo {
	width: 229px;
	margin: 249px auto 0;
	position: relative;
}

.bg-blend {
	background-color: rgba(255, 7, 7, 0.5);
	background-blend-mode: color;
}

.game-wrapper, svg#header-back  {
	margin: 124px 22px 0;
	width: 256px;
}

svg#header-back {
	height: auto;
	overflow: visible;
	{{~#if (showFpo)}}/*opacity:0.1;*/{{/if~}} 
}
.game-txt {
	font-size: 17px;
	line-height: 18px ;
	{{~#if (showFpo)}}color: green !important;{{/if~}}
}
p.header-txt {
	margin-top: 30px;
}

ol {
	display: block;
	position: absolute;
	overflow: hidden;
	width: 100%;
	margin-top: 32px;
}

li {
	width: 100%;
	height: 53px;
	border-radius: 3px;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	display: flex;
	align-items: center;
	{{!/* justify-content: center; */}}
	margin-bottom: 10px;
	padding-left: 10px;
}

#game1-wrapper li {
	border: solid {{borderStroke}}px {{frame2.borderRed}};
}
#game2-wrapper li {
	border: solid {{borderStroke}}px #84bfe6;
}

#g1-answers li {
	background-color: rgba(75, 19, 47, {{frame2.fillOpacity}});
	/* background-color: rgba(79, 19, 47, 0.7); */
}
#g2-answers li {
	background-color: {{group.blueFill}};
}
#g1-wrong-answers li span.strikethrough {
	position: relative;
	display: inline-block;
}

#g1-wrong-answers li span.strikethrough::after {
	position: absolute;
	border-top: 2px solid white;
	background-color: white;
	content: ' ';
	left: 0;
	top: 50%;
	width: calc(100% + 3px);
	margin: 0px -2px;
}

/* Endframe */

#end-container * {
	position: relative !important;
	display: block;
}

#end-txt{
	font-size: 29px;
	line-height: 30px;
	margin-top: 233px;
	{{~#if (showFpo)}}color: red;{{/if}}
}

#cta {
	background-color: var(--teal);
	border-radius: 4px;
	color: white;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 32px auto 0;
	padding: 6px 12px;
	font-size: 16px;
	letter-spacing: -0.5px;
	{{~#if (showFpo)}}visibility: visible;background-color: rgba(255, 0, 0, 0.4); color:red{{/if}}
}

#cta-txt {
	white-space: nowrap;
	width: auto;
}

svg#ohio-logo{
	width: 52px;
	margin: 106px auto 0;
}